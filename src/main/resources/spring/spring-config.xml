<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:jpa="http://www.springframework.org/schema/data/jpa" 
       xmlns:context="http://www.springframework.org/schema/context" 
       xsi:schemaLocation="
       	http://www.springframework.org/schema/beans 
       	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
       	http://www.springframework.org/schema/data/jpa 
        http://www.springframework.org/schema/data/jpa/spring-jpa.xsd 
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd" >

<!--     <bean id="controller" class="com.epam.processor.AccidentsControllerBasicImpl" autowire="byType"/> -->

    <bean id="hsqldb.connection" class="com.epam.db.HsqlInit" factory-method="initDatabase"/>
       
    <context:component-scan base-package="com.epam" />   
   
    <jpa:repositories base-package="com.epam.h5"/>
	
	<bean class="org.springframework.orm.jpa.JpaTransactionManager" id="transactionManager">
	  <property name="entityManagerFactory"
	      ref="entityManagerFactory" />
	  <property name="jpaDialect">
	    <bean class="org.springframework.orm.jpa.vendor.HibernateJpaDialect" />
	  </property>
	</bean>
 
	<bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
	  <property name="dataSource" ref="dataSource" />
	  <property name="jpaVendorAdapter">
	    <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
	      <property name="generateDdl" value="true" />
	      <property name="database" value="HSQL" />
	    </bean>
	  </property>
	</bean>
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName">
			<value>org.hsqldb.jdbcDriver</value>
		</property>
		<property name="url">
			<value>jdbc:hsqldb:hsql://localhost/jmp</value>
		</property>
		<property name="username">
			<value>sa</value>
		</property>
		<property name="password">
			<value></value>
		</property>
		<property name="maxActive">
			<value>10</value>
		</property>
        <property name="maxIdle"> 
            <value>2</value> 
        </property> 
        <property name="maxWait"> 
            <value>120000</value> 
        </property> 
	</bean>
</beans>
